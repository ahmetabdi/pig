<style>
img{
  display: block;
  margin-left: auto;
  margin-right: auto
}
.with-top-navbar {
  padding-top: 20px;
}
</style>

<script>
$(document).ready(function() {

  $(this).bind("contextmenu", function(e) {
      e.preventDefault();
  });

  $(".game-launch").click(function() {
    var process_name = $(this).data("process");
    var friendly_name = $(this).data("name");
    var dll_path = $(this).data("dll");
    window.external.Run(process_name, friendly_name, dll_path);
  });
});
</script>

<% if user_signed_in? %>
<% if current_user.approved? %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
    <div class="alert alert-warning alert-dismissible hidden-xs" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      <p>Click on the games image to Inject ensure you are running as Admin and the game is open!</p>
      <p>If an error appears ensure you have all the dependancies installed, please check the FAQ on the website.</p>
    </div>
    <%= link_to (image_tag 'games/blade-and-soul-black.png', width: 250), '#', data: { name: 'Blade & Soul',
                                                                                     process: 'Client',
                                                                                     dll: '/PigDll.dll' }, class: 'game-launch' %>

                                                                                     <div class="container p-t-md">
      <div class="panel panel-default panel-link-list">
        <div class="panel-body">
          <p>Hotkeys:</p>
          <p>FlyHack: Insert or G</p>
          <p>Speedhack: Delete</p>
        </div>
      </div>
    <%= link_to (image_tag 'games/star-wars-the-old-republic.png', width: 250), '#', data: { name: 'Star Wars: The Old Republic',
                                                                                           process: 'swtor',
                                                                                           dll: '/PigDll.dll' }, class: 'game-launch' %>
    <div class="panel panel-default panel-link-list">
      <div class="panel-body">
        <p>Coming Soon</p>
      </div>
    </div>
  </div>
</div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Payment is Pending / Awaiting Approval may take 5-10 minutes after payment</h2>
      </div>
    </div>
  </div>
<% end %>
</div>
<% else %>
  <%= render "devise/sessions/login" %>
<% end %>
