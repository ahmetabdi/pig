<!-- 850 x 750 -->

<style>
img {
  display: block;
  margin-left: auto;
  margin-right: auto
}
</style>

<script>
$(document).ready(function() {
  $(".game-launch").click(function() {
    var process_name = $(this).data("process");
    HelperObject.run(process_name);
  });
});
</script>

<% if user_signed_in? %>
  <%= link_to (image_tag 'games/blade-and-soul.png', width: 250), '#', data: { name: 'Blade & Soul', process: 'Client' }, class: 'game-launch' %>
  <hr/>
  <%= link_to (image_tag 'games/star-wars-the-old-republic.png', width: 250), '#', data: { name: 'Star Wars: The Old Republic', process: 'swtor' }, class: 'game-launch' %>
  <hr/>
<% else %>
  <%= render "devise/sessions/form" %>
<% end %>
