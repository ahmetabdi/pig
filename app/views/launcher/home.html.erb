}
</style>

<script>
$(document).ready(function() {
  $(".game-launch").click(function() {
    var process_name = $(this).data("process");
    HelperObject.run(process_name);
  });
});
</script>

<% if user_signed_in? %>
<div class="w-full amt">

  <%= link_to (image_tag 'games/blade-and-soul-black.png', width: 250), '#', data: { name: 'Blade & Soul', process: 'Client' }, class: 'game-launch' %>
  <hr/>
  <%= link_to (image_tag 'games/star-wars-the-old-republic.png', width: 250), '#', data: { name: 'Star Wars: The Old Republic', process: 'swtor' }, class: 'game-launch' %>
  <hr/>

  </div>
<% else %>
  <%= render "devise/sessions/login" %>
<% end %>
