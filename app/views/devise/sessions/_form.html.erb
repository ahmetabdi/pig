<div id="containerWrap">
   <div id="header"></div>
   <div id="contents">
      <header id="topHeader">
         <h1 class="subTitle">Log In</h1>
      </header>
      <div id="contentWrap">
         <div class="wrapLogin">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
               <div class="login-input">
                  <fieldset>
                     <legend>LOG IN</legend>
                     <div class="inputGroup">
                        <%= f.label :email, 'Email Address' %>
                        <%= f.email_field :email, placeholder: "Email Address", autofocus: true, autocomplete: false %>
                     </div>
                     <div class="inputGroup wrapPassword">
                        <%= f.label :password, 'Password' %>
                        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
                     </div>
                     <div class="wrapAccountRemember">
                        <input type="checkbox" name="remember" id="remember" class="checkbox">
                        <%= f.check_box :remember_me, id: "remember", class: "checkbox" %>
                        <%= f.label :remember_me, "Remember me" %>
                     </div>
                     <%= render 'layouts/errors' %>
                     <div class="wrapButton">
                        <%= f.submit "LOG IN", class: "button squareSingle" %>
                     </div>

                     <div class="wrapLink">
                        <span class="link">
                           <%= link_to "Create Account", new_user_registration_path, class: "button text" %>
                        </span>
                        <span class="bar"></span>
                        <span class="link">
                           <%= link_to "CanÊ¹t log in?", new_password_path(resource_name), class: "button text" %>
                        </span>
                     </div>
                  </fieldset>
               </div>
            <% end %>
         </div>
      </div>
   </div>
</div>
