<div class="container p-t-md">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name, params.permit(:launcher).to_h), html: { class: 'm-x-auto text-center app-login-form' }) do |f| %>

      <%= render 'layouts/errors' %>

      <div class="app-brand m-b-lg">
        <%= image_tag('login.png', alt: "brand") %>
      </div>

      <div class="form-group">
        <h3>Login</h3>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email Address", autofocus: false, autocomplete: false, class: 'form-control' %>
      </div>

      <div class="form-group m-b-md">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control' %>
      </div>

      <div class="m-b-lg">
        <button class="btn btn-primary fw">Log In</button>
      </div>

      <% unless params[:launcher] %>
      <footer class="screen-login">
        <%= link_to "Create Account", new_user_registration_path, class: "text-muted" %> |
        <%= link_to "CanÊ¹t log in?", new_password_path(resource_name), class: "text-muted" %>
      </footer>
      <% end %>
    <% end %>
  </div>
</div>
