<div class="container p-t-md">
  <div class="row">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'm-x-auto text-center app-login-form' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="app-brand m-b-lg">
        <%= image_tag('login.png', alt: "brand") %>
      </div>

      <div class="form-group">
        <h3>Change your password</h3>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: false, placeholder: "Password", autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="m-b-lg">
        <%= f.submit "Change my password", class: 'btn btn-primary fw' %>
      </div>

      <footer class="screen-login">
        <%= link_to "Login", login_path, class: "text-muted" %> |
        <%= link_to "Create Account", new_registration_path(resource_name), class: "text-muted" %>
      </footer>

    <% end %>
  </div>
</div>
