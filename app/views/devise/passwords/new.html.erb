<div class="container-fluid container-fill-height">
  <div class="container-content-middle">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'm-x-auto text-center app-login-form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="app-brand m-b-lg">
        <%= image_tag('login.png', alt: "brand") %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email Address", autofocus: true, autocomplete: false, class: 'form-control' %>
      </div>

      <div class="m-b-lg">
        <button class="btn btn-primary fw">Send me reset password instructions</button>
      </div>

      <footer class="screen-login">
        <%= link_to "Login", login_path, class: "text-muted" %> |
        <%= link_to "Create Account", new_registration_path(resource_name), class: "text-muted" %>
      </footer>
    <% end %>
  </div>
</div>
